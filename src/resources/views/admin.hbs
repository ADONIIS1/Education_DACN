<!-- ================ Order Details List ================= -->
<div class="details">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2>Top học sinh đạt điểm cao</h2>
            <a href="/competition/ranks" class="btn">Xem Tất cả</a>
            
        </div>
        <table>
            <thead>
                <tr>
                    
                    <td>Họ và tên</td>
                    <td>Email</td>
                    <td>Số điểm</td>
                    {{!-- <td>Status</td> --}}
                </tr>
            </thead>

            <tbody>
                {{#each ranks}}
                    <tr>
                        {{#this.user}}
                            <td>
                                <img src="{{avatar}}" alt=""style="width:40px;height:40px; border-radius:20px">
                                {{fullname}}
                            </td>
                            <td>{{email}}</td>
                        {{/this.user}}
                        
                        <td>{{this.score}} <i class="mdi mdi-heart" style="color: red;"></i></td>
                    </tr>
                {{/each}}
            
            </tbody>
        </table>
    </div>

    <!-- ================= New Customers ================ -->
    <div class="recentCustomers">
        <div class="cardHeader">
            <h2>Người Đang Hoạt Động
                
            </h2>
            
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.on("server-send-counter", (data) => {
        $("#visitors").html(data);
