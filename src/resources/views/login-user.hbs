<html>

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap"
        rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/vendor/eggy-js/css/eggy.css" />
    <link rel="stylesheet" href="/vendor/eggy-js/css/progressbar.css" />
    <link rel="stylesheet" href="/vendor/eggy-js/css/theme.css" />
</head>

<body>
    <div class="container-fluid background">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-md-4 row-container">
                <form action="/login" method="POST">
                    <div class="text-center"><img class="rounded-3" src="/img/trangchu.jpg" width="44" height="44" />
                        <h3 class="fw-bold mt-4 mb-5">Đăng nhập</h3>
                    </div>
                    <div class="form-field"><input class="form-input" placeholder=" " type="email" name="email" value=""
                            autocomplete="off" /><label class="form-label">Email</label></div>
                    <div class="form-field"><input class="form-input" placeholder=" " type="password" name="password"
                            value="" autocomplete="off" /><label class="form-label">Mật khẩu</label></div>
                    <div class="form-check d-flex align-items-center justify-content-between fs-7">
                        <div><input class="form-check-input mt-0" id="rememberMe" type="checkbox" /><label
                                class="form-check-label" for="rememberMe">Lưu đăng nhập</label></div><a
                            class="form-check-label text-primary" href="/password/reset">Quên mật khẩu</a>
                    </div>
                    <div class="d-grid mt-4"><button class="btn btn-primary" type="submit">Đăng nhập</button></div>
                    <div class="text-center mt-4">
                        <div class="fs-7"><span>Bạn chưa có tài khoản? </span><a class="text-primary" type="button"
                                data-bs-toggle="modal" data-bs-target="#registerModal">Đăng ký</a>
                            <div class="modal fade" id="registerModal" tabindex="-1"
                                aria-labelledby="registerModalLabel" aria-hidden="true">
                                <div class="modal-dialog" style="transition: all 0.3s ease">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="registerModalLabel">Bạn muốn đăng ký tài khoản?
                                            </h5><button class="btn-close" type="button" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-start fs-6">
                                            <p>Vui lòng liên hệ admin qua địa chỉ email: pc3@gmail.com</p>
                                            <p>Hotline hỗ trợ: 0398412xxx</p>
                                            <p>Cảm ơn!</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="/vendor/eggy-js/js/eggy.js"></script>
    <script>// toast message
        let msgToastError = '';
        if (msgToastError != '') {
            Eggy({
                title: 'Oops... Có gì đó không đúng',
                message: msgToastError,
                type: 'warning',
                duration: 5000,
            });
        }

        let msgToastSuccess = '';
        if (msgToastSuccess != '') {
            Eggy({
                title: 'Thành công',
                message: msgToastSuccess,
                type: 'success',
                duration: 5000,
            });
        }  </script>
</body>

</html>