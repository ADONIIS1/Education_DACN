<section class="subjects">
    {{#ifCond user.length ">" 0}}
        {{#ifCond subjectsStudying.length ">" 0}}
            <div class="mb-4">
                <h4 class="fw-bold mb-4">Nội dung Đang Học</h4>
                <div class="row">
                    {{#each subjectsStudying}}
                    <div class="col-sm-3 col-12">
                        <div class="subjects__item mb-5" style="border: 1px solid rgba(0,0,0,.125); border-radius:20px;">
                            {{#ifCond name "===" "Phần Lý Thuyết"}}
                                {{#grade}}
                                    <a class="subjects__link" href="/subjects/theory/{{slug}}">
                                        {{#if image}}
                                        <img src="{{image}}" width="30px" height="50px">
                                        {{else}}
                                        <img src="https://i.pinimg.com/236x/fe/09/05/fe09055dfc6d7638765d3fa255e4b788.jpg" alt="">
                                        {{/if}}
                                    </a>
                                {{/grade}}
                            {{else}}
                                {{#grade}}
                                    <a class="subjects__link" href="/subjects/bible/{{slug}}">
                                        {{#if image}}
                                        <img src="{{image}}" width="30px" height="50px">
                                        {{else}}
                                        <img src="https://i.pinimg.com/236x/fe/09/05/fe09055dfc6d7638765d3fa255e4b788.jpg" alt="">
                                        {{/if}}
                                    </a>
                                {{/grade}}
                            {{/ifCond}}
                            <h6 class="mt-3 subjects__title" style="text-align: center;">
                                <a href="">{{this.name}} - 
                                {{#this.grade}}
                                Lớp {{name}}</a>
                                {{/this.grade}}
                            </h6>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        {{/ifCond}}
    {{/ifCond}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="socap-tab" data-bs-toggle="tab" data-bs-target="#socap" type="button" role="tab" aria-controls="socap" aria-selected="false">Sơ Cấp</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="canban-tab" data-bs-toggle="tab" data-bs-target="#canban" type="button" role="tab" aria-controls="canban" aria-selected="false">Căn Bản</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link " id="kinhthanh-tab" data-bs-toggle="tab" data-bs-target="#kinhthanh" type="button" role="tab" aria-controls="kinhthanh" aria-selected="true">Kinh Thánh</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="vaodoi-tab" data-bs-toggle="tab" data-bs-target="#vaodoi" type="button" role="tab" aria-controls="vaodoi" aria-selected="false">Vào Đời</button>
        </li>
    </ul>
    <div class="tab-content mt-5">
        <div class="tab-pane fade active show" id="socap" role="tabpanel" aria-labelledby="socap-tab">
            <h4 class="fw-bold mb-4">Lớp học sơ cấp</h4>
            <div class="row">
                {{#each gradeSoCap}}
                <div class="col-sm-3 col-12">
                    <div class="subjects__item mb-5" style="border: 1px solid rgba(0,0,0,.125); border-radius:20px;">
                        <a class="subjects__link" >
                        {{#if this.image}}
                        <img src="{{this.image}}">
                        {{else}}
                        <img src="https://i.pinimg.com/236x/fe/09/05/fe09055dfc6d7638765d3fa255e4b788.jpg" alt="">
                        {{/if}}
                        </a>
                        <h6 class="mt-3 subjects__title" style="text-align: center;">
                            {{name}}
                        </h6>
                        <hr>
                        <div class="btns" style="align-items: center; margin-bottom: 9px; margin-left: 12%">
                            <a href="/subjects/theory/{{this.slug}}" class="btn btn-success" style="margin-right:20%">
                            Lý Thuyết
                            </a>
                            <a href="/subjects/bible/{{this.slug}}" class="btn btn-success"> Kinh</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="tab-pane fade" id="canban" role="tabpanel" aria-labelledby="canban-tab">
            <h4 class="fw-bold mb-4">Lớp học Căn bản</h4>
            <div class="row">
                {{#each gradeCanBan}}
                <div class="col-sm-3 col-12">
                    <div class="subjects__item mb-5" style="border: 1px solid rgba(0,0,0,.125); border-radius:20px;">
                        <a class="subjects__link" >
                        {{#if this.image}}
